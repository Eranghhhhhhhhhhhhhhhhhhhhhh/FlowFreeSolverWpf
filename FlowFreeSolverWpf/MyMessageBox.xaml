<Window x:Class="FlowFreeSolverWpf.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flow Free Solver"
        Height="170"
        Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock Margin="10" TextWrapping="Wrap">
                <TextBlock.Text>
                    <Binding Path="MessageText" />
                </TextBlock.Text>
            </TextBlock>
            <!--<Label Margin="10" >
                <Label.Content>
                    <Binding Path="MessageText" Mode="OneWay" />
                </Label.Content>
            </Label>-->
        </StackPanel>

        <Button Grid.Row="1" x:Name="OkButton" Content="OK" Margin="10" Width="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" />

    </Grid>

</Window>
